{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gradle-debug",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "run",
        "--debug-jvm"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Listening for transport.*$",
          "endsPattern": "^.*Listening for transport.*$"
        }
      }
    }
  ]
}
